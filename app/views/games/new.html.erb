<div class = "d-flex flex-column align-items-center">
  <div class = "w-50">
    <h1 class="mt-3">New game</h1>

    <div class="d-flex">
      <%@letters.each do |n|%>
      <div class="py-2 px-3 border bg-danger text-white font-weight-bold mx-1"><%=n.capitalize%></div>
      <%end%>
    </div>

    <div class="d-flex my-3">
      <form action="/score" method="post" data-turbo="false">
        <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
        <%= hidden_field_tag :letters, @letters %>
        <p class="mb-1 p-0">What is the longest word you can find?</p>
        <input type="text" name="word" class="">
        <input type="submit" value="Submit!" class="btn btn-primary">
      </form>
    </div>
  </div>
</div>
